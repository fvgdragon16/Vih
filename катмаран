#include <SPI.h>
#include "nRF24L01.h"
#include "RF24.h"


#define SPEED_R 4
#define DIR_R 5
#define SPEED_L 6
#define DIR_L 7


RF24 radio(9, 10);
int data[2]; 


void setup() {
  Serial.begin(9600);
  
  for (int i = 4; i < 8; i++) { //подключение моторов к пинам контороллера
    pinMode(i, OUTPUT);
  }

  radio.begin();

  radio.setAutoAck(1);
	radio.setRetries(0, 15); 
	radio.openReadingPipe(1, 0xAABBCCDD11LL);
	radio.setChannel(5); 
	radio.setPALevel(RF24_PA_MAX); 
	radio.setDataRate(RF24_1MBPS); 

	radio.powerUp();
  radio.startListening();
}


void loop() {
  radio.read(&data, sizeof(data));
    //отладка
    Serial.print("Motor cin: "); 
	  Serial.println(data[0]);
	  Serial.print("LR cin: ");
	  Serial.println(data[1]);

  if (data[0] < 0) { //назад
    for (int i = 0; i < abs(data[0]); i = i + 10) {
      digitalWrite(DIR_R, HIGH);
      digitalWrite(DIR_L, HIGH);
      analogWrite(SPEED_R, i); 
      analogWrite(SPEED_L, i); 
    }
    analogWrite(SPEED_R, abs(data[0]));
    analogWrite(SPEED_L, abs(data[0]));
  } 

  if (data[0] > 0) { //вперед 
    for (int i = 0; i < data[0]; i = i + 10) {
      digitalWrite(DIR_R, LOW);
      digitalWrite(DIR_L, LOW);
      analogWrite(SPEED_R, i);
      analogWrite(SPEED_L, i);
    }
    analogWrite(SPEED_R, data[0]);
    analogWrite(SPEED_L, data[0]);
  }

  if (data[1] >= 10) {
    if (data[0] >= 0); {
      digitalWrite(DIR_L, LOW);
      analogWrite(SPEED_L, data[0] + 20);
    }
    if (data[0] < 0) {
      digitalWrite(DIR_L, HIGH);
      analogWrite(SPEED_L, abs(data[0]) + 20);
    }
  }

  if (data[1] <= 10) {
    if (data[0] >= 0); {
      digitalWrite(DIR_R, LOW);
      analogWrite(SPEED_R, data[0] + 20);
    }
    if (data[0] < 0) {
      digitalWrite(DIR_R, HIGH);
      analogWrite(SPEED_R, abs(data[0]) + 20);
    }
  }  
}
